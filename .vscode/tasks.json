// See https://go.microsoft.com/fwlink/?linkid=733558 for the documentation
// about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build extension",
      "type": "shell",
      "command": "pnpm",
      "args": ["build"],
      "problemMatcher": "$tsc",
      "isBackground": false,
      "presentation": {
        "reveal": "always"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build grammar",
      "type": "shell",
      "command": "pnpm",
      "args": ["build:grammar"],
      "isBackground": false,
      "presentation": {
        "reveal": "silent"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Watch extension",
      "type": "shell",
      "command": "pnpm",
      "args": ["watch"],
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "silent"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Test grammar",
      "type": "shell",
      "command": "pnpm",
      "args": ["vscode-tmgrammar-test", "-c", "test/grammar/**/*.lipi"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": {
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "^(ERROR)\\s([^:]+):(\\d+):(\\d+):(\\d+)\\s(.*)$",
            "severity": 1,
            "file": 2,
            "line": 3,
            "column": 4,
            "endColumn": 5,
            "message": 6
          }
        ]
      }
    }
  ]
}
