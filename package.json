{
  "name": "lipi",
  "displayName": "Lipi",
  "publisher": "lipi-lang",
  "description": "Lipi language support for Visual Studio Code",
  "version": "0.0.1",
  "license": "Apache-2.0",
  "main": "./out/extension",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:lipi",
    "onLanguage:lipi-extended"
  ],
  "contributes": {
    "languages": [
      {
        "id": "lipi",
        "aliases": [
          "Lipi",
          "lipi"
        ],
        "extensions": [
          ".lipi"
        ],
        "configuration": "./configurations/lipi.json"
      },
      {
        "id": "lipi-extended",
        "aliases": [
          "Lipi Extended",
          "lipi extended"
        ],
        "extensions": [
          ".lipix"
        ],
        "configuration": "./configurations/lipix.json"
      }
    ],
    "grammars": [
      {
        "language": "lipi",
        "scopeName": "source.lipi",
        "path": "./syntaxes/lipi.tmLanguage.json"
      },
      {
        "language": "lipi-extended",
        "scopeName": "source.lipi-extended",
        "path": "./syntaxes/lipix.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "lipi",
        "path": "./snippets/lipi.json"
      },
      {
        "language": "lipi-extended",
        "path": "./snippets/lipix.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm build",
    "build": "tsc -b",
    "watch": "tsc -b -w"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "@types/vscode": "^1.64.0",
    "@types/which": "^2.0.1",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  }
}
