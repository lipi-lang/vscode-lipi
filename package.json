{
  "name": "lipi",
  "displayName": "Lipi",
  "publisher": "lipi-lang",
  "description": "Lipi language support for Visual Studio Code",
  "version": "0.2.0",
  "license": "Apache-2.0",
  "main": "./dist/extension",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:lipi"
  ],
  "contributes": {
    "languages": [
      {
        "id": "lipi",
        "aliases": [
          "Lipi",
          "lipi"
        ],
        "extensions": [
          ".lipi"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lipi",
        "scopeName": "source.lipi",
        "path": "./syntaxes/lipi.tmLanguage.json"
      },
      {
        "scopeName": "markdown.lipi.codeblock",
        "path": "./syntaxes/lipi.codeblock.tmLanguage.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.lipi": "lipi"
        }
      }
    ],
    "snippets": [
      {
        "language": "lipi",
        "path": "./snippets/lipi.json"
      }
    ]
  },
  "scripts": {
    "build:grammar": "pnpm js-yaml syntaxes/lipi.tmLanguage.yaml > syntaxes/lipi.tmLanguage.json",
    "build:extension": "tsc -b",
    "build": "pnpm build:grammar && pnpm build:extension",
    "watch": "pnpm build:grammar && tsc -b -w",
    "vscode:prepublish": "pnpm build"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "@types/vscode": "^1.64.0",
    "@types/which": "^2.0.1",
    "js-yaml": "^4.1.0",
    "prettier": "2.6.2",
    "typescript": "^4.5.5",
    "vscode-tmgrammar-test": "^0.1.1"
  }
}
