{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Lipi",
  "patterns": [
    { "include": "#comment" },
    { "include": "#metadata" },
    { "include": "#atom" }
  ],
  "repository": {
    "comment": {
      "patterns": [
        { "include": "#comment-line" },
        { "include": "#comment-block" }
      ]
    },
    "comment-line": {
      "name": "comment.line.lipi",
      "begin": ";",
      "end": "\n"
    },
    "comment-block": {
      "name": "comment.block.lipi",
      "begin": "_(#*)\\(",
      "end": "\\)\\1",
      "patterns": [{ "include": "#comment-block-nested-sexp" }]
    },
    "comment-block-nested-sexp": {
      "name": "comment.block.lipi",
      "begin": "_?\\(",
      "end": "\\)",
      "patterns": [{ "include": "#comment-block-nested-sexp" }]
    },
    "metadata": {
      "patterns": [
        { "include": "#metadata-symbol" },
        { "include": "#metadata-parenthesis" },
        { "include": "#metadata-bracket" }
      ]
    },
    "metadata-symbol": {
      "name": "comment.line.lipi",
      "match": "\\^(?:[[:alpha:]!$?*\\-=_+<>.?][\\/[:alnum:]!$?*\\-=_+<>.?]*)"
    },
    "metadata-parenthesis": {
      "name": "comment.line.lipi",
      "begin": "\\^\\(",
      "end": "\\)",
      "patterns": [{ "include": "#metadata-nested-sexp" }]
    },
    "metadata-bracket": {
      "name": "comment.line.lipi",
      "begin": "\\^\\[",
      "end": "\\]",
      "patterns": [{ "include": "#metadata-nested-sexp" }]
    },
    "metadata-nested-sexp": {
      "name": "comment.line.lipi",
      "begin": "\\(",
      "end": "\\)",
      "patterns": [{ "include": "#metadata-nested-sexp" }]
    },
    "atom": {
      "patterns": [
        { "include": "#atom-keyword" },
        { "include": "#atom-indexed-parameter" },
        { "include": "#atom-character" },
        { "include": "#atom-string" },
        { "include": "#atom-number" },
        { "include": "#atom-sexp" }
      ]
    },
    "atom-keyword": {
      "name": "entity.name.tag.lipi",
      "match": ":{1,2}([[:alpha:]!$?*\\-=_+<>.?][\\/[:alnum:]!$?*\\-=_+<>.?]*)"
    },
    "atom-indexed-parameter": {
      "name": "keyword.operator.lipi",
      "match": "(?<=\\(|\\s)%[0-9]+\\b"
    },
    "atom-character": {
      "name": "string.other.lipi",
      "match": "\\$(?:u[0-9a-fA-F]{2,6}|space|newline|tab|formfeed|backspace|return|.)"
    },
    "atom-string": {
      "patterns": [
        { "include": "#atom-string-triple-raw" },
        { "include": "#atom-string-triple-static" },
        { "include": "#atom-string-single-raw" },
        { "include": "#atom-string-single-static" }
      ]
    },
    "atom-string-escape": {
      "name": "constant.character.escape.lipi",
      "match": "\\\\."
    },
    "atom-string-triple-raw": {
      "name": "string.quoted.lipi",
      "begin": "#\"{3}",
      "end": "\"{3}"
    },
    "atom-string-triple-static": {
      "name": "string.quoted.lipi",
      "begin": "\"{3}",
      "end": "\"{3}",
      "patterns": [{ "include": "#atom-string-escape" }]
    },
    "atom-string-single-raw": {
      "name": "string.quoted.lipi",
      "begin": "#\"{1}",
      "end": "\"{1}"
    },
    "atom-string-single-static": {
      "name": "string.quoted.lipi",
      "begin": "\"{1}",
      "end": "\"{1}",
      "patterns": [{ "include": "#atom-string-escape" }]
    },
    "atom-number": {
      "name": "constant.numeric.lipi",
      "match": "(?<!%)~?\\b[[:digit:]]+(?:\\.[[:digit:]]*)?\\b"
    },
    "atom-sexp": {
      "begin": "(?<!')\\(",
      "end": "\\)",
      "patterns": [
        {
          "match": "(?<=\\()(?:\\s*)(?:(%[0-9]+|:{2}|->|and|case|cond|declare|def[^\\s]*|derives|either|forall|fn|let|not[^\\s]*|or|using)(?=\\s|\\))|(@?[~!%^&*\\-=_+|\\\\:'<>\\/?\\p{L}\\p{Sm}\\p{Sc}][\\.~!%^&*\\-=_+|\\\\:'<>\\/?\\p{L}\\p{Sm}\\p{Sc}\\p{M}\\p{N}]*))",
          "captures": {
            "0": { "name": "entity.name.function.lipi" },
            "1": { "name": "keyword.control.lipi" }
          }
        },
        { "include": "$self" }
      ]
    }
  },
  "scopeName": "source.lipi"
}
