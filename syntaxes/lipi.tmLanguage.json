{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Lipi",
  "patterns": [
    { "include": "#comment" },
    { "include": "#metadata" },
    { "include": "#atom" }
  ],
  "repository": {
    "comment": {
      "name": "comment.line.lipi",
      "begin": ";",
      "end": "\n"
    },
    "metadata": {
      "name": "entity.name.tag.lipi",
      "match": "\\^(?:[[:alpha:]!$?*\\-=_+<>.?][\\/[:alnum:]!$?*\\-=_+<>.?]*)"
    },
    "atom": {
      "patterns": [
        { "include": "#atom-keyword" },
        { "include": "#atom-character" },
        { "include": "#atom-string" },
        { "include": "#atom-number" },
        { "include": "#atom-list" }
      ]
    },
    "atom-keyword": {
      "name": "entity.name.tag.lipi",
      "match": ":([[:alpha:]!$?*\\-=_+<>.?][\\/[:alnum:]!$?*\\-=_+<>.?]*)"
    },
    "atom-character": {
      "name": "string.other.lipi",
      "match": "\\$(?:u[0-9a-fA-F]{2,6}|space|newline|tab|formfeed|backspace|return|.)"
    },
    "atom-string": {
      "patterns": [
        { "include": "#atom-string-triple-raw" },
        { "include": "#atom-string-triple-static" },
        { "include": "#atom-string-single-raw" },
        { "include": "#atom-string-single-static" }
      ]
    },
    "atom-string-escape": {
      "name": "constant.character.escape.lipi",
      "match": "\\\\."
    },
    "atom-string-triple-raw": {
      "name": "string.quoted.lipi",
      "begin": "#\"{3}",
      "end": "\"{3}"
    },
    "atom-string-triple-static": {
      "name": "string.quoted.lipi",
      "begin": "\"{3}",
      "end": "\"{3}",
      "patterns": [{ "include": "#atom-string-escape" }]
    },
    "atom-string-single-raw": {
      "name": "string.quoted.lipi",
      "begin": "#\"{1}",
      "end": "\"{1}"
    },
    "atom-string-single-static": {
      "name": "string.quoted.lipi",
      "begin": "\"{1}",
      "end": "\"{1}",
      "patterns": [{ "include": "#atom-string-escape" }]
    },
    "atom-number": {
      "name": "constant.numeric.lipi",
      "match": "~?\\b[[:digit:]]+(?:\\.[[:digit:]]*)?\\b"
    },
    "atom-list": {
      "begin": "(?<!')\\(",
      "end": "\\)",
      "patterns": [
        {
          "match": "(?<=\\()(?:\\s*)(?:(declare|def[^\\s]*|forall|import|let|module)|@?[[:alpha:]!$?*\\-=_+<>.?][\\/[:alnum:]!$?*\\-=_+<>.?]*)",
          "captures": {
            "0": { "name": "entity.name.function.lipi" },
            "1": { "name": "support.function.lipi" }
          }
        },
        { "include": "#comment" },
        { "include": "#metadata" },
        { "include": "#atom" }
      ]
    }
  },
  "scopeName": "source.lipi"
}
